<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/repair_item"

    android:background="#22242b">

    <LinearLayout
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:background="@drawable/number"
                android:gravity="center"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#ffffff"
                    android:id="@+id/repair_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="9pt" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/repair_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리페어이름"
                    android:textSize="8pt" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.6"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:gravity="center|right"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="#7e849a"
                    android:id="@+id/repair_term"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리페어 텀"
                    android:textSize="6pt" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.2"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7e849a"
                    android:text="|"
                    android:textStyle="bold"
                    android:textSize="7pt"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#7e849a"
                    android:id="@+id/repair_mile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리페어 키로수"
                    android:textSize="6pt" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp"></LinearLayout>
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#5a5f72"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>