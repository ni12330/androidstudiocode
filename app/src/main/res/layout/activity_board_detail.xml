<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#22242b"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.2"
        android:weightSum="5"
        android:background="@null"
        >
        <LinearLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_cancel2"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:background="@drawable/left2"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2.2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            >
            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_update"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/round7"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:text="수정" />


            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_delete"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/round7"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:text="삭제"
                />
        </LinearLayout>

    </LinearLayout>
    <!--    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.3"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_centerInParent="true"
                android:background="#7885CB"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/board_title"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:text="TITLE"
            android:textColor="#ffffff"
            android:gravity="center|left"
            android:paddingLeft="25dp"
            android:textSize="10pt"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.3"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerInParent="true"
            android:background="#7885CB"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:id="@+id/boardImg"
                android:layout_width="100px"
                android:layout_height="140px"
                android:background="@drawable/man"
                android:layout_marginLeft="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_weight="2.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/board_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="#ffffff"
                android:textSize="9pt"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.96"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:textColor="#c6c9d2"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/board_makedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#c6c9d2"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.3"
        >

        <TextView
            android:id="@+id/board_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:text="Content"
            android:textColor="#c6c9d2"
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignTop="@+id/board_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="169dp"
            android:layout_marginBottom="18dp"
            app:srcCompat="@drawable/camera" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sympathy_yes"
            android:layout_width="450dp"
            android:layout_height="450dp"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="439-love-explosion.json"
            app:lottie_loop="false"
            app:lottie_repeatCount="1"
            android:visibility="gone"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sympathy_no"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="1588-dislike.json"
            app:lottie_loop="false"
            app:lottie_repeatCount="1"
            android:visibility="gone"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/sympathy"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@drawable/round7"
                android:text="공감"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btn_reply"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/round7"
                android:text="덧글"
                android:layout_gravity="left"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>